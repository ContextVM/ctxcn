{
  "name": "@contextvm/ctxcn",
  "version": "1.0.13",
  "description": "A command-line utility inspired by shadcn that streamlines the integration of ContextVM (CVM) servers into your TypeScript projects",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "ctxcn": "dist/index.js"
  },
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run index.ts",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "keywords": [
    "contextvm",
    "cvm",
    "mcp",
    "cli",
    "typescript",
    "code-generation"
  ],
  "author": "Contextvm-org",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/bun": "latest",
    "@types/node": "^20.19.23",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@contextvm/sdk": "^0.1.34",
    "@modelcontextprotocol/sdk": "^1.20.1",
    "json-schema-to-typescript": "^15.0.4"
  }
}
